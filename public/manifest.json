{
  "manifest_version": 2,
  "name": "no-words",
  "description": "更懂你的单词学习工具",
  "homepage_url": "https://nowords.gwthub.com",
  "version": "0.0.1",
  "icons": {
    "16": "images/icon192.png",
    "48": "images/icon192.png",
    "128": "images/icon192.png"
  },
  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["static/js/content_script.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "<all_urls>",
    "declarativeContent",
    "background",
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    "images/*",
    "static/media/*",
    "static/css/*",
    "fonts/*"
  ]
}
