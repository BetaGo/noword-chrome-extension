{
  "manifest_version": 2,
  "name": "no-word",
  "description": "方便地查单词和记单词",
  "homepage_url": "https://noword.gwthub.com",
  "version": "0.0.1",
  "icons": {
    "16": "images/icon192.png",
    "48": "images/icon192.png",
    "128": "images/icon192.png"
  },
  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["static/js/content_script.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["<all_urls>", "background", "tabs", "storage"],
  "web_accessible_resources": ["images/*", "static/media/*"]
}
